{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "sourceMap": false,
    "declaration": false,
    "experimentalDecorators": false,
    "removeComments": true,
    "lib": ["DOM", "es6", "es7"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
